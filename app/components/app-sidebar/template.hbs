<div class="c-app-sidebar">
  <div class="c-app-sidebar__logo">
    {{logo-dropdown
        externalLinks=@externalLinks
        showShortcutBar=@showShortcutBar
    }}
  </div>

  <div class="c-sidebar-filter test-sidebar-default-filter">
    {{#link-to "index"
        (query-pair "filterBy" null)
        class="c-sidebar-filter__item test-sidebar-filter-item"
        activeClass="is-active"
    }}
      <span class="c-sidebar-filter__name test-sidebar-filter-name">
        All assets
      </span>
    {{/link-to}}
  </div>

  {{#if @sidebarFilters}}
    {{#each @sidebarFilters as |sidebarFilter|}}
      {{sidebar-filter filter=sidebarFilter}}
    {{/each}}
  {{/if}}
</div>