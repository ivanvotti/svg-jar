{{#each
    (sort-by "name"
      (to-items (group-by @arrangeBy @assets)
        keyName="name"
        valueName="items"
      )
    )
    as |group|
}}
  <div class="c-asset-group test-asset-group">
    <div class="c-asset-group__header test-asset-group-header">
      <span class="c-asset-group__title test-asset-group-title">
        {{group.name}}
      </span>

      <span class="c-asset-group__count test-asset-group-count">
        {{group.items.length}} Items
      </span>
    </div>

    {{asset-list assets=group.items}}
  </div>
{{/each}}
