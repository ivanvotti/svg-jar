{{#if currentItem}}
  <div class="c-app-pane__section">
    <div class="c-app-pane__title">
      Usage
    </div>

    <pre class="c-app-pane__usage">{{currentItem.usage}}</pre>
  </div>

  <div class="c-app-pane__section">
    <div class="c-app-pane__title">
      Details
    </div>

    <div class="c-app-pane__details">
      <div class="c-details__item">
        <div class="c-details__name">
          Name
        </div>

        <div class="c-details__value">
          {{currentItem.name}}
        </div>
      </div>

      <div class="c-details__item">
        <div class="c-details__name">
          Grid size
        </div>

        <div class="c-details__value">
          {{currentItem.svg.width}}x{{currentItem.svg.height}}
        </div>
      </div>

      {{#if currentItem.tags}}
        <div class="c-details__item">
          <div class="c-details__name">
            Tags
          </div>

          <div class="c-details__value">
            {{#each currentItem.tags as |tag|}}
              <span class="c-details__tag">
                {{tag}}
              </span>
            {{/each}}
          </div>
        </div>
      {{/if}}

      {{#each currentItem.details as |detailsItem|}}
        <div class="c-details__item">
          <div class="c-details__name">
            {{detailsItem.name}}
          </div>

          <div class="c-details__value">
            {{detailsItem.value}}
          </div>
        </div>
      {{/each}}
    </div>
  </div>
{{else}}
  <div class="c-app-pane__section">
    No Selection
  </div>
{{/if}}
