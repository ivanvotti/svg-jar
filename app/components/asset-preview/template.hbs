{{#if isScaleUpNeeded}}
  <svg class="c-asset-preview__item"
    width="{{multiply asset.svg.width 2}}px"
    height="{{multiply asset.svg.height 2}}px"
    viewBox="{{asset.svg.viewBox}}"
    xmlns="http://www.w3.org/2000/svg"
  >
    {{{asset.svg.content}}}
  </svg>
{{/if}}

<svg class="c-asset-preview__item c-asset-preview__item--base"
  width="{{asset.svg.width}}px"
  height="{{asset.svg.height}}px"
  viewBox="{{asset.svg.viewBox}}"
  xmlns="http://www.w3.org/2000/svg"
>
  {{{asset.svg.content}}}
</svg>