{{app-navbar
    arrangeDropdownItems=model.arrangeBy
    sortDropdownItems=model.sortBy
    searchQuery=searchQuery
    setSearchQuery=(action setSearchQuery)
    showShortcutsBar=(action showShortcutsBar)
}}

<div class="c-app-main">
  {{#if model.filters}}
    {{app-sidebar sidebarFilters=model.filters}}
  {{/if}}

  <div class="c-app-content {{if (not assets.length) 'c-app-content--empty'}}">
    {{#if (not assets.length)}}
      <div class="c-placeholder">
        {{#if searchQuery}}
          <div class="c-placeholder__image">
            {{svg-jar "search" class="c-icon c-icon--40x40px"}}
          </div>
        {{/if}}

        <div class="c-placeholder__title">
          {{#if searchQuery}}
            We couldnâ€™t find any assets matching
            <span class="c-placeholder__code">
              {{searchQuery}}
            </span>
          {{else}}
            No assets found
          {{/if}}

          {{#if filterName}}
            in
            <span class="c-placeholder__code">
              {{filterName}}
            </span>
          {{/if}}
        </div>
      </div>
    {{else if arrangeBy}}
      {{asset-groups
          assets=assets
          currentAsset=currentAsset
          arrangeBy=arrangeBy
          setCurrentAsset=(action "setCurrentAsset")
      }}
    {{else}}
      {{asset-list
          assets=assets
          currentAsset=currentAsset
          setCurrentAsset=(action "setCurrentAsset")
      }}
    {{/if}}
  </div>

  {{app-pane
      currentAsset=currentAsset
      detailsItems=model.details
  }}
</div>
