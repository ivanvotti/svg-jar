{{app-navbar
    arrangeDropdownItems=arrangeDropdownItems
    sortDropdownItems=sortDropdownItems
}}

<div class="c-app-main">
  <div class="c-app-content">
    {{#if arrangeBy}}
      {{asset-groups
          assets=sortedAssets
          currentAsset=currentAsset
          arrangeBy=arrangeBy
          setCurrentAsset=(action "setCurrentAsset")
      }}
    {{else}}
      {{asset-list
          assets=sortedAssets
          currentAsset=currentAsset
          setCurrentAsset=(action "setCurrentAsset")
      }}
    {{/if}}
  </div>

  {{app-pane currentAsset=currentAsset}}
</div>
