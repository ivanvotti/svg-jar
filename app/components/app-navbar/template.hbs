<div class="c-app-navbar__section c-app-navbar__section--left">
  {{svg-jar "logo" class="c-app-navbar__logo"}}
</div>

<div class="c-app-navbar__section c-app-navbar__section--center">
  {{search-bar
      searchQuery=searchQuery
      setSearchQuery=(action setSearchQuery)
  }}
</div>

<div class="c-app-navbar__section c-app-navbar__section--right">
  {{query-dropdown
      class="u-mar-right-s"
      buttonName="Sort by"
      queryParamName="sortBy"
      dropdownItems=sortDropdownItems
  }}

  {{!-- TODO: Get rid of the dropdownAlignment, when auto alignment is implemented. --}}
  {{query-dropdown
      dropdownAlignment="right"
      buttonName="Arrange by"
      queryParamName="arrangeBy"
      dropdownItems=arrangeDropdownItems
  }}
</div>
