{{#if @dropdownItems}}
  {{#basic-dropdown renderInPlace=true as |dropdown|}}
    {{#dropdown.trigger}}
      <button class="c-dropdown__trigger" data-test-query-dropdown-trigger>
        <div class="c-dropdown__trigger-inner">
          <span data-test-query-dropdown-trigger-text>
            {{@buttonName}}
          </span>
          {{svg-jar "arrow-down" class="c-icon c-icon--16x16 c-dropdown__trigger-arrow"}}
        </div>
      </button>
    {{/dropdown.trigger}}
    {{#dropdown.content class="c-dropdown__content"}}
      <div {{action dropdown.actions.close}} data-test-query-dropdown-content>
        {{#each @dropdownItems as |dropdownItem|}}
          <LinkTo
            @route="index"
            @query={{query-pair @queryParamName dropdownItem.key}}
            class="c-dropdown__item"
            data-test-query-dropdown-item="true"
          >
            {{dropdownItem.name}}
          </LinkTo>
        {{/each}}

        <div class="c-dropdown__divider"></div>

        <LinkTo
          @route="index"
          @query={{query-pair @queryParamName null}}
          class="c-dropdown__item"
          data-test-query-dropdown-item="true"
        >
          None
        </LinkTo>
      </div>
    {{/dropdown.content}}
  {{/basic-dropdown}}
{{/if}}
